public class SalesIQRankUpdate_ba implements Database.Batchable<SObject>, Database.Stateful {

	public Date baseYearMonth;

	public Database.QueryLocator start(Database.BatchableContext BC) {
		return Database.getQueryLocator([
				SELECT Id
				FROM Account
				LIMIT 1
		]);
	}

	public void execute(Database.BatchableContext BC, List<Account> scope) {

		if(baseYearMonth == null) baseYearMonth = Date.today().toStartOfMonth();

		Map<Decimal, List<SalesIQ__c>> scoringMap          = new Map<Decimal, List<SalesIQ__c>>();
		List<SalesIQ__c>               targetUpdateList    = new List<SalesIQ__c>();
		List<SalesIQ__c>            salesIQS            = [
				SELECT Id, Point__c, Rank__c
				FROM SalesIQ__c
				WHERE BaseYearMonth__c = :baseYearMonth
				AND Division__c = '실적'
				ORDER BY Point__c DESC NULLS LAST
		];
		Integer  rank = 0;

		// 점수별 Account List Map
		for(SalesIQ__c iq : salesIQS) {
			iq.Point__c = iq.Point__c == null ? 0 : iq.Point__c;

			if(!scoringMap.containsKey(iq.Point__c)) {
				scoringMap.put(iq.Point__c, new List<SalesIQ__c>{iq});
			}
			else {
				scoringMap.get(iq.Point__c).add(iq);
			}
		}

		// targetUpdateList에 실제 update 할 data Add.
		for(List<SalesIQ__c> accList : scoringMap.values()) {
			rank++;
			for(SalesIQ__c tempIQ : accList) {
				tempIQ.Rank__c = rank;

				targetUpdateList.add(tempIQ);
			}
		}

		update targetUpdateList;
	}

