public with sharing class ZZ_SendPDIToLWS {
	public static void sendPDI(Id pdiId) {
		PDI__c pdi = [
				SELECT Id,
					(SELECT Id, ContentDocumentId FROM AttachedContentDocuments WHERE Title = 'PDI.pdf')
				FROM PDI__c WHERE Id =:pdiId
		];
		Id contentDocumentId = null;
		ContentVersion cv = null;
		if(pdi.AttachedContentDocuments.isEmpty() == false) {
			contentDocumentId = pdi.AttachedContentDocuments[0].ContentDocumentId;
			cv = [SELECT Id, Title FROM ContentVersion WHERE ContentDocumentId = :contentDocumentId];
			Map<String, String> returnMap = LwsService.IF_KR_SE_LWS_0018(pdi.Id, cv.Id);
			if(returnMap.get('STATUS') == 'Y') {
				pdi.IFStatus__c = 'Complete'; // IF 처리 상태(Apex)
			} else {
				pdi.IFStatus__c = 'Error'; // IF 처리 상태(Apex)
				pdi.IFMessage__c = returnMap.get('MESSAGE'); // IF 처리 내용(Apex)
			}
		} else {
			pdi.IFStatus__c = 'Error'; // IF 처리 상태(Apex)
			pdi.IFMessage__c = 'PDF File Not found';
		}

		update pdi;

	}

