public with sharing class ContractDeliveryDateChangeQa {
	public class InitData extends I2ComClass.InitData {
		@AuraEnabled public Contract__c prevContract {get;private set;}
		@AuraEnabled public Contract__c newContract {get;private set;}
		@AuraEnabled public Date toDay {get;private set;}
	}

	@AuraEnabled
	public static InitData init(String recordId){
		InitData initData = new InitData();

		initData.newContract =  [
				SELECT
						Id,
						CustomerExpectedDate__c,
						Customer__c,
						Customer__r.PersonMobilePhone,
						Customer__r.Name
				FROM Contract__c
				WHERE Id =:recordId
		];
		initData.prevContract = initData.newContract.clone(false);
		initData.toDay = Date.today();
		return initData;
	}

	@AuraEnabled
	public static void save(Contract__c newContract, Contract__c prevContract) {
		if(newContract != null)  {
			update newContract;

			sendAuthSMS(newContract, prevContract);
		}


	}

	public static void sendAuthSMS(Contract__c newContract, Contract__c prevContract) {

		NotificationTemplate__c notificationTemplate = new NotificationTemplate__c();
		for(NotificationTemplate__c mt: [SELECT Id,Channel__c,Title__c,Content__c  FROM NotificationTemplate__c WHERE Name = '계약 인도기일 변경 고객 알림' AND IsActive__c = true]){
			notificationTemplate = mt;
		}
		if(Test.isRunningTest()) {
			notificationTemplate.Title__c = '테스트';
			notificationTemplate.Channel__c = '1008';
			notificationTemplate.Content__c = String.join(
					new List<String> {
					'안녕하세요 %%LABEL1%%고객님 LS엠트론입니다' ,
					'다음의 계약정보로 계약변경이 완료 되었습니다.' ,
					' ',
					'변경 전 인도기일 : %%LABEL2%%' ,
					'변경 후 인도기일 : %%LABEL3%%' ,
					' ' ,
					'공급 일정의 변경에 양해해 주신 점 감사드립니다.' ,
					'변경 된 일정에는 공급될 수 있도록 최선을 다 하겠습니다.'
					}, '\n');
		}

		NotificationGroup__c notiGroup = new NotificationGroup__c();
		notiGroup.TargetId__c = newContract.Customer__c;
		notiGroup.IF_Status__c = 'Pending';
		insert notiGroup;
		System.debug(notiGroup.Id);

		Notification__c noti = new Notification__c();
		noti.TargetId__c = newContract.Customer__c;
		noti.Phone__c = newContract.Customer__r.PersonMobilePhone;
		noti.Lead__c = null;
		noti.Account__c = newContract.Customer__c;
		noti.User__c = null;
		noti.Contact__c = null;
		noti.LABEL1__c = newContract.Customer__r.Name;
		noti.LABEL2__c = prevContract.CustomerExpectedDate__c.format();
		noti.LABEL3__c = newContract.CustomerExpectedDate__c.format();
		noti.LABEL4__c = null;
		noti.LABEL5__c = null;
		noti.IsSendingReservation__c = false;
		noti.SendingTime__c = Datetime.now();
		noti.msg_status__c = null;
		noti.NotificationGroup__c = notiGroup.Id;

		noti.NotificationTemplate__c = notificationTemplate.Id;
		noti.Channel__c = notificationTemplate.Channel__c;
		noti.Title__c = notificationTemplate.Title__c;
		noti.RawContents__c = notificationTemplate.Content__c;

		insert noti;

		System.enqueueJob(new i2SEMA_IFNotificationSend_qu(new List<Notification__c>{noti}));
	}

