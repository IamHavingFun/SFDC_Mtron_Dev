<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>QuoteCnt__c</field>
        <field>ContractCnt__c</field>
        <field>PlanThisYearAmount__c</field>
        <field>ActualThisYearAmount__c</field>
        <field>PlanThisMonthAmount__c</field>
        <field>ActualThisMonthAmount__c</field>
        <field>Dealer__c</field>
        <field>ConsultingCnt__c</field>
        <field>BusinessOfficeName__c</field>
        <field>DeliveryCnt__c</field>
        <field>CreatedBy</field>
        <field>StartDate__c</field>
        <field>EndDate__c</field>
        <field>PlanBudget__c</field>
        <field>CampaignName__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>영업팀장 승인</label>
        <name>CampaignManagerApprovalProcess</name>
    </approvalStep>
    <emailTemplate>unfiled$public/AppliedMarketingCampaignEmailTemplate</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MarketingCampaign__c.Status__c</field>
            <operation>equals</operation>
            <value>작성</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ActionFieldUpdate_Approve</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ActionFieldUpdate_Close</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ActionFieldUpdate_Close</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ActionFieldUpdate_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ActionFieldUpdate_Request</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AppliedEmailAction</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>캠페인 승인 프로세스</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
